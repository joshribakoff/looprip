{
  "name": "agent-pipeline-runtime",
  "version": "0.1.0",
  "description": "Runtime for executing agentic pipeline YAML configurations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "p": "tsx src/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:prompts": "tsx src/cli/lint-prompts.ts",
    "clean": "rm -rf dist",
    "cli": "tsx src/cli/index.js",
    "interactive": "tsx src/cli/index.js interactive",
    "prompt:create": "tsx src/cli/index.js prompt create",
    "agent": "tsx src/agentLoop.ts"
  },
  "keywords": [
    "agent",
    "pipeline",
    "mcp",
    "ai",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^12.0.0",
    "ink-text-input": "^6.0.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "zod": "^3.22.4",
    "dotenv": "^16.4.5",
    "openai": "^4.73.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "ink": "^6.3.1",
    "react": "^19.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
